pipeline {
    agent any
    stages {
        stage('Build') {
            when {
                expression { env.current_status == "opened" && env.merged == false}
            }
            steps {
                sh 'pwd'
                sh 'ls'
                dir("Docker") {
                    sh 'ls'
                    sh 'mvn -B -DskipTests clean package' 
                }
            }
        }
        stage('Test') {
            when {
                expression { env.current_status == "opened" && env.merged == false}
            }
            environment {
                TEXT= "hello"
            }
            steps {
                dir("Docker") {
                    sh 'ls'
                    sh 'mvn test'
                }
            }
        }
        stage('Build after merge') {
            when {
                expression {
                    return env.current_status == "opened" && env.merged == true
                }
            }
            steps {
                sh 'pwd'
                sh 'echo "Build after merge"'
                dir("Docker") {
                    sh 'ls'
                    sh 'mvn -B -DskipTests clean package'
                }
            }
        }
    }
}
